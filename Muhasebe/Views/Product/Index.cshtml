@using Muhasebe.EntityLayer.Conrete
@model List<Product>

<section class="content-header">
    <h1>
        Ürünler
        <small>Başlangıç</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Ürün</a></li>
        @* <li><a href="#">Examples</a></li> *@
        <li class="active">Index</li>
    </ol>
</section>

<table class=" table table-bordered">
    <tr>
        <th>Id  </th>
        <th>Adı  </th>
        <th>Fiyatı  </th>
        <th>Stok Miktarı</th>
        <th>Kategori </th>
        <th>Açıklama  </th>
        <th>Durumu</th>
        <th>Detay</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ProductId</td>
            <td>@item.ProductName</td>
            <td>@item.Price</td>
            <td>@item.StockQuantity</td>
            <td><a href="#" class="btn btn-warning ">@item.Category.CategoryName </a> </td>
            @if (item.ProductDescription.Length > 50)
            {
                <td>@item.ProductDescription.Substring(0,item.ProductDescription.Substring(0,50).LastIndexOf(" "))  ...</td>
            }
            else
            {
                <td>@item.ProductDescription</td>
            }
            
            <td>@item.ProductStatus</td>
            <td><a href="/Product/PrdouctDetails/@item.ProductId" class="btn btn-danger ">Ürün Detayı</a> </td>
        </tr>
    }
</table>